{
    "manifest_version": 3,
    "name": "chromecalc",
    "description": "A simple calculator extension for Chrome.",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/calculator-16.png",
            "48": "icons/calculator-48.png",
            "128": "icons/calculator-128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/calculator-16.png",
        "48": "icons/calculator-48.png",
        "128": "icons/calculator-128.png"
    }
}